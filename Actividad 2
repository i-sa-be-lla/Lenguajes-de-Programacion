Actividad 2. Crear una app que sume, reste, multiplique y divida sus valores entero o decimales.

*******************************************************************************/

#include <iostream> //Biblioteca standar de entrada y salida std::cin y std::cout

int main() {
  float numero1, numero2; //Declaramos variable (numerico decimales), numero1 y numero2
  
  std::cout <<"Escribe el primer numero: "; //Se solicita el 1er numero
  std::cin >> numero1; //Escribe 1er numero
  
  std::cout <<"Escribe el segundo nombre: "; // Se solicita el 2do numero
  std::cin >> numero2; //Escribe 2do numero
  
  float Suma = numero1 + numero2; //Se realiza la suma del numero 1 mas el numero 2
  float Resta = numero1 - numero2; // Se realiza la resta del numero 1 y el numero 2
  float Multiplicacion = numero1 * numero2; //Se realiza la multiplicacion del numero 1 y el numero 2
  float Division = numero1 / numero2; // Se realiza la division del numero 1 y el mumero 2
  
  std:: cout << "La suma es: " << Suma << std::endl; //Muestra la leyenda La suma es: con el resultado de suma
  std:: cout << "La resta es: " << Resta << std::endl; //Muestra la leyenda La resta es: con el resultado de la resta
  std:: cout << "La multiplicaciÃ³n es: " << Multiplicacion << std::endl; //Muestra la Leyenda La multiplicacion es: con el resultado de la misma
  std:: cout << "La division es: " << Division << std:: endl; //Muestra la leyenda La division es: con el resultado de la division
  
  return 0; //Finaliza el programa
}